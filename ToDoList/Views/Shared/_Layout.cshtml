@using ToDoList.Enums
@using ToDoList.Flags

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDoList</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ToDoList.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <ul class="horizontal">
                <li><a href="/">ToDo</a></li>
                <li><a href="/Category">Category</a></li>
            </ul>
        </nav>
        <form class="switcher" method="post" action="/ToDo/ChangeFlag">
            <select name="flag">
                @foreach (var item in Enum.GetValues(typeof(DataBases)))
                {
                    bool isSelected = ((int)item == Convert.ToInt32(DBSwitchFlag.Flag));
                    <option value="@((int)item)" selected="@isSelected">@item</option>
                }
            </select>
            <button type="submit">Change DB</button>
        </form>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>

    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
